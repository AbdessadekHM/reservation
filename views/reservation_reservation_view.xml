<odoo>

    <record id="reservation_reservation_list" model="ir.ui.view">
        <field name="name">Reservation List</field>
        <field name="model">reservation.reservation</field>
        <field name="arch" type="xml">
            <list >
                <header>
                    <button string="Print xls" type="object" name="open_date_filter"/>
                </header>

                <field name="name" />
                <field name="amount_total" />
                <field name="partner_id"/>
                <field name="reservation_start_date" />
                <field name="reservation_end_date" />
                <field name="state" widget="badge" decoration-success="state=='confirmed'" decoration-danger="state=='cancelled'" />


            </list>

        </field>

    </record>


    <record id="reservation_reservation_form" model="ir.ui.view">
        <field name="name">Reservation Form</field>
        <field name="model">reservation.reservation</field>
        <field name="arch" type="xml">
            <form>

                <sheet>

                    <div class="oe_button_box" name="button_box">
                        <button type="object" name="redirect_to_sales" widget="statinfo" class="oe_stat_button" title="Devices" icon="fa-usd" string="Devices" invisible="not state!='draft'">

                            <field name="total" widget="statinfo" />
                                

                        </button>

                    </div>
                    <header>
                        
                        <button class="btn btn-primary" type="object" name="confirm" invisible="state == 'confirmed'">Confirm</button>
                        <button confirm="Are you sure you want to cancel" type="object" name="cancel" invisible="state == 'cancelled'">Cancel</button>
                        <button type="object" name="print_pdf_report" >print</button>
                        <field name="state" widget="statusbar" />

                    </header>
                    <group>

                        <group col="1" style="width:100vw">
                            <div class="oe_title">
                                <h1>
                                    <field name="name" placeholder="Reservation Name" />
                                </h1>

                            </div>
                        </group>

                        <group>
                            <field name="partner_id" />
                        </group>

                        <group>
                            <group>
                                <field name="reservation_start_date" />
                            </group>

                            <group>
                                <field name="reservation_end_date" />
                            </group>
                        </group>

                        
                        <group>
                            <field name="amount_total" />
                        </group>
                    </group>


                    <notebook>
                        <page string="Reservation lines">
                            <field name="line_ids">
                                <list editable="bottom">
                                    <field name="product_id" />
                                    <field name="unit_price" />
                                    <field name="quantity" />
                                    <field name="subtotal" />

                                </list>
                            </field>
                        </page>
                    </notebook>

                </sheet>
                <chatter/>
            </form>
        </field>

    </record>


    <record id="reservation_window_action" model="ir.actions.act_window">
        <field name="name">Reservations</field>
        <field name="res_model">reservation.reservation</field>
        <field name="view_mode">list,form,activity</field>

    </record>
</odoo>