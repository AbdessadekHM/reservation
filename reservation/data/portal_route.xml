<odoo>

    <template id="portal_my_home_custom" inherit_id="portal.portal_my_home">
        <xpath expr="//div[@id='portal_common_category']" position="inside">
            <t t-call="portal.portal_docs_entry">
                <t t-set="title">Reservations</t>
                <t t-set="text">See you reservations</t>
                <t t-set="url" t-value="'/my/reservations'"/>

                <t t-set="config_card" t-value="True"/>
                <!-- <t t-set="placeholder_count" t-value="'reservations'"/> -->
            </t>
        </xpath>
    </template>
</odoo>