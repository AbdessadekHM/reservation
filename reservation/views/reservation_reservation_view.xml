    <record id="reservation_reservation_form" model="ir.ui.view">
        <field name="name">Reservation Form</field>
        <field name="model">reservation.reservation</field>
        <field name="arch" type="xml">
            <form>

                <sheet>
                    <group>

                        <group col="1" style="width:100vw">
                            <div class="oe_title">
                                <h1>
                                    <field name="name" placeholder="Reservation Name" />
                                </h1>

                            </div>
                        </group>

                        <group>
                            <field name="partner_id" />
                        </group>

                        <group>
                            <field name="reservation_date" />
                        </group>

                        <group>
                            <field name="state" />
                        </group>
                        
                        <group>
                            <field name="amount_total" />
                        </group>
                    </group>


                    <notebook>
                        <page string="Reservation lines">
                            <field name="line_ids">
                                <list>
                                    <field name="quantity" />
                                    <field name="unit_price" />
                                    <field name="subtotal" />
                                    <field name="product_id" />

                                </list>
                            </field>
                        </page>
                    </notebook>

                </sheet>
                <chatter/>
            </form>
        </field>

    </record>


    <record id="reservation_window_action" model="ir.actions.act_window">
        <field name="name">Reservations</field>
        <field name="res_model">reservation.reservation</field>
        <field name="view_mode">list,form</field>

    </record>
</odoo>