<odoo>
    <template id="portal_my_reservations" name="My Reservations">
        <t t-call="portal.portal_layout">
            <t t-set="breadcrumbs_searchbar" t-value="True"/>
            <t t-call="portal.portal_searchbar">
                <t t-set="title">Reservations</t>
            </t>

            <t t-if="not reservations">
                <p class="alert alert-warning">You currently have no reservations.</p>
            </t>

            <div t-if="reservations" class="panel panel-default">
                <div class="table-responsive">
                    <table class="table table-hover o_portal_my_doc_table">
                        <thead>
                            <tr class="active">
                                <th>Reservation #</th>
                                <th>Start Date</th>
                                <th>End Date</th>
                                <th class="text-right">Quantity / Total</th>
                                <th class="text-center">Status</th>
                            </tr>
                        </thead>
                        <tbody>
                            <t t-foreach="reservations" t-as="res">
                                <tr>
                                    <td>
                                        <a t-att-href="res.get_portal_url()">
                                            <t t-esc="res.name"/>
                                        </a>
                                    </td>
                                    <td><span t-field="res.reservation_start_date" t-options='{"widget": "date"}'/></td>
                                    <td><span t-field="res.reservation_end_date" t-options='{"widget": "date"}'/></td>
                                    <td class="text-right">
                                        <span t-field="res.amount_total"/>
                                    </td>
                                    <td class="text-center">
                                        <span t-if="res.state == 'draft'" class="badge badge-pill badge-info">
                                            <i class="fa fa-fw fa-clock-o"/> Draft
                                        </span>
                                        <span t-if="res.state == 'confirmed'" class="badge badge-pill badge-success">
                                            <i class="fa fa-fw fa-check"/> Confirmed
                                        </span>
                                        <span t-if="res.state == 'cancelled'" class="badge badge-pill badge-danger">
                                            <i class="fa fa-fw fa-times"/> Cancelled
                                        </span>
                                    </td>
                                </tr>
                            </t>
                        </tbody>
                    </table>
                </div>
            </div>
        </t>
    </template>
</odoo>